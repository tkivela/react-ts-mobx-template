{
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-eslint-rules",
    "tslint-config-prettier"
  ],
  "rules": {
    "no-var-requires": false,
    "no-floating-promises": false,
    "jsx-no-lambda": false,
    "object-literal-sort-keys": false,
    "no-implicit-dependencies": false // There is a bug in TSLint which complains about missing depency for "react-testing-library" so we'll have this linting rule disabled for now
  }
}